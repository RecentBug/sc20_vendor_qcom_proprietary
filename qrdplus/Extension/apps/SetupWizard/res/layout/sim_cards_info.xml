<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sim_cards_info"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_126dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/size_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_66dp"
            android:layout_marginTop="@dimen/size_36dp"
            android:src="@drawable/ic_sim1" />

        <TextView
            android:id="@+id/sim1_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_12dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/size_1dp"
        android:layout_height="@dimen/size_54dp"
        android:layout_gravity="center"
        android:background="@color/black_alpha_54" />

    <LinearLayout
        android:layout_width="@dimen/size_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_66dp"
            android:layout_marginTop="@dimen/size_36dp"
            android:src="@drawable/ic_sim2" />

        <TextView
            android:id="@+id/sim2_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_12dp" />
    </LinearLayout>

</LinearLayout>