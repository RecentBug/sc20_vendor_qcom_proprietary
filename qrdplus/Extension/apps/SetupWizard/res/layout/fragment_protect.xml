<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/protect_content"
        android:layout_marginBottom="@dimen/size_36dp"
        android:fontFamily="sans-serif"
        android:text="@string/protect_tips" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/line" />

    <Button
        android:id="@+id/choose_pattern"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:paddingStart="@dimen/size_16dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/protect_pattern"
        android:textColor="@color/black_alpha_87"
        android:textSize="@dimen/size_16sp"
        android:textAllCaps="false"
        android:background="?android:attr/selectableItemBackground" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/line" />

    <Button
        android:id="@+id/choose_pin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:paddingStart="@dimen/size_16dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/protect_pin"
        android:textColor="@color/black_alpha_87"
        android:textSize="@dimen/size_16sp"
        android:textAllCaps="false"
        android:background="?android:attr/selectableItemBackground" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/line" />

    <Button
        android:id="@+id/choose_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:paddingStart="@dimen/size_16dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/protect_password"
        android:textColor="@color/black_alpha_87"
        android:textSize="@dimen/size_16sp"
        android:textAllCaps="false"
        android:background="?android:attr/selectableItemBackground" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/line" />

</LinearLayout>