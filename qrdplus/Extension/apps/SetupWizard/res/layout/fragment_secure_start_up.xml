<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/secure_start_up_msg"
        style="@style/protect_content"
        android:layout_marginBottom="@dimen/size_18dp" />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp">

        <RadioButton
            android:id="@+id/encrypt_require_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/encrypt_require_pin"
            android:textColor="@color/black_alpha_54" />

        <RadioButton
            android:id="@+id/encrypt_no_require_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/encrypt_no_require"
            android:textColor="@color/black_alpha_54" />
    </RadioGroup>

</LinearLayout>