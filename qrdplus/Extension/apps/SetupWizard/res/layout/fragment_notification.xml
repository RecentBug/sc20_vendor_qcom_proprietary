<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lock_screen_notifications_msg"
        style="@style/protect_content"
        android:layout_marginBottom="@dimen/size_18dp"
        android:fontFamily="sans-serif"
        android:text="@string/lock_screen_notifications_interstitial_message" />

    <RadioGroup
        android:id="@+id/lock_screen_notifications_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:checkedButton="@+id/lock_screen_notifications_hide" >

        <RadioButton
            android:id="@+id/lock_screen_notifications_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/lock_screen_notifications_summary_show"
            android:textColor="@color/black_alpha_54" />

        <RadioButton
            android:id="@+id/lock_screen_notifications_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="sans-serif"
            android:text="@string/lock_screen_notifications_summary_hide"
            android:textColor="@color/black_alpha_54" />

        <RadioButton
            android:id="@+id/lock_screen_notifications_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="sans-serif"
            android:text="@string/lock_screen_notifications_summary_disable"
            android:textColor="@color/black_alpha_54" />
    </RadioGroup>

</LinearLayout>