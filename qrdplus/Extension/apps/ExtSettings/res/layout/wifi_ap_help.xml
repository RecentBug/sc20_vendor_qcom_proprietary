<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginEnd="22dp"
    android:layout_marginStart="22dp"
    android:layout_marginTop="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content_view_settings_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifiap_settings_desc"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/content_view_settings_indication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/wifiap_settings_indication"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/content_view_settings_indication_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/wifiap_settings_indication_step1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wifiap_help_select_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifiap_settings_indication_step2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wifiap_help_ssid_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifiap_settings_indication_step3_ssid"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifiap_settings_indication_step4"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>
