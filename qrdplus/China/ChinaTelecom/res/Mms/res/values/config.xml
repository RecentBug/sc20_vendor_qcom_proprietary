<resources>
    <!-- configuration for limit count -->
    <integer name="limit_count">20</integer>

    <!-- configuration for sms priority  -->
    <bool name="support_sms_priority">true</bool>

    <!-- configuration for low memory notification -->
    <bool name="config_detect_low_memory">true</bool>

    <!-- configuration for cancel mms -->
    <bool name="config_mms_cancelable">true</bool>

    <bool name="config_retry_always">true</bool>

    <!-- configuration for display sent time in CT mode -->
    <bool name="config_display_sent_time">true</bool>

    <!-- configuration for retry scheme of sent failed message -->
    <integer-array name="retry_scheme">
        <item>0</item>
        <item>60000</item>
        <item>60000</item>
        <item>600000</item>
    </integer-array>

    <!-- configuration for ignoring CDMA SMS attributes during international roaming -->
    <bool name="config_ignore_sms_attributes">true</bool>
    <bool name="config_resend_to_edit">true</bool>
</resources>
