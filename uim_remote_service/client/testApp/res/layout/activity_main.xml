<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button_RegCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="RegCb"
        android:text="@string/RegCb" />

    <Button
        android:id="@+id/button_UnregCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="UnregCb"
        android:text="@string/UnregCb" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editText_UimRemoteClientEvent_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="slot(int)" />

    <EditText
        android:id="@+id/editText_UimRemoteClientEvent_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="event(int)" />

    <EditText
        android:id="@+id/editText_UimRemoteClientEvent_atr"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="atr(byte[])" />

    <EditText
        android:id="@+id/editText_UimRemoteClientEvent_errCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="errCode(int)" />

    <Button
        android:id="@+id/Button_UimRemoteClientEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteEvent"
        android:text="@string/uimRemoteEvent" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editText_UimRemoteClientApdu_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="slot(int)" />

    <EditText
        android:id="@+id/editText_UimRemoteClientApdu_apduStatus"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="apduStatus(int)" />

    <EditText
        android:id="@+id/editText_UimRemoteClientApdu_apduResp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="apduResp(byte[])" />

    <Button
        android:id="@+id/Button_UimRemoteClientApdu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteApdu"
        android:text="@string/uimRemoteApdu" />

</LinearLayout>
