<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

<!-- RegCb -->
    <Button
        android:id="@+id/button_RegCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="regCb"
        android:text="@string/RegCb"/>

<!-- UnregCb -->
    <Button
        android:id="@+id/button_UnregCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="unregCb"
        android:text="@string/UnregCb"/>

<!-- uimRemoteServerConnectReq -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
    <EditText
        android:id="@+id/editText_UimRemoteServerConnectReq_maxMessageSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="maxMessageSize(int)"/>
    <Button
        android:id="@+id/Button_UimRemoteServerConnectReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteServerConnectReq"
        android:text="@string/UimRemoteServerConnectReq"/>

<!-- uimRemoteServerDisconnectReq -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/Button_UimRemoteServerDisconnectReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteServerDisconnectReq"
        android:text="@string/UimRemoteServerDisconnectReq"/>

<!-- uimRemoteServerApduReq -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
    <EditText
        android:id="@+id/editText_UimRemoteServerApduReq_cmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="cmd(byte[])"/>
    <Button
        android:id="@+id/Button_UimRemoteServerApduReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteServerApduReq"
        android:text="@string/UimRemoteServerApduReq"/>

<!-- uimRemoteServerTransferAtrReq -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/Button_UimRemoteServerTransferAtrReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteServerTransferAtrReq"
        android:text="@string/UimRemoteServerTransferAtrReq"/>

<!-- uimRemoteServerPowerReq -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
    <EditText
        android:id="@+id/editText_UimRemoteServerPowerReq_powerState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="powerState(boolean)"/>
    <Button
        android:id="@+id/Button_UimRemoteServerPowerReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteServerPowerReq"
        android:text="@string/UimRemoteServerPowerReq"/>

<!-- uimRemoteServerResetSimReq -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/Button_UimRemoteServerResetSimReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uimRemoteServerResetSimReq"
        android:text="@string/UimRemoteServerResetSimReq"/>

</LinearLayout>
