<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/border"
    android:padding="2dp" >

    <View
        android:id="@+id/chkBoxGetCardATR"
        android:layout_width="8dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtGetCardATR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chkBoxGetCardATR"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/chkBoxGetCardATR"
        android:background="@color/colorIndigo"
        android:text="@string/getCardATR"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtInput3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkBoxGetCardATR"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/chkBoxGetCardATR"
        android:layout_toRightOf="@+id/chkBoxGetCardATR"
        android:padding="4dp"
        android:text="@string/input"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <ProgressBar
        android:id="@+id/progressBarGetCardATR"
        style="@android:style/Widget.Holo.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtSlotId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInput3"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput3"
        android:padding="4dp"
        android:text="@string/slotID"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/getCardATRSlotId"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSlotId"
        android:layout_toEndOf="@+id/txtSlotId"
        android:layout_toRightOf="@+id/txtSlotId"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtOutputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSlotId"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/chkBoxGetCardATR"
        android:padding="4dp"
        android:text="@string/output"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtGetCardATRReturnValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSlotId"
        android:layout_alignStart="@+id/txtSlotId"
        android:layout_below="@+id/txtOutputLabel"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/returnValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/txtGetCardATRResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSlotId"
        android:layout_alignStart="@+id/txtSlotId"
        android:layout_below="@+id/txtGetCardATRReturnValue"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/result"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/txtGetCardATRCallback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSlotId"
        android:layout_alignStart="@+id/txtSlotId"
        android:layout_below="@+id/txtGetCardATRResult"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/card_atr_callback"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

</RelativeLayout>