<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/border"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/chkBoxCardPowerUp"
        android:layout_width="8dp"
        android:layout_height="30dp"
        />

    <TextView
        android:background="@color/colorIndigo"
        android:layout_alignBaseline="@+id/chkBoxCardPowerUp"
        android:layout_toRightOf="@+id/chkBoxCardPowerUp"
        android:id="@+id/txtCardPowerUp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cardPowerUp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/txtInput6"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input"
        android:layout_below="@+id/chkBoxCardPowerUp"
        android:layout_toRightOf="@+id/chkBoxCardPowerUp"
        android:layout_toEndOf="@+id/chkBoxCardPowerUp" />

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progressBarCardPowerUp"
        style="@android:style/Widget.Holo.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/txtSlotId"
        android:padding="4dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slotID"
        android:layout_below="@+id/txtInput6"
        android:layout_toRightOf="@+id/txtInput6"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/cardPowerUp_slotID"
        android:padding="4dp"
        android:singleLine="true"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSlotId"
        android:layout_toRightOf="@+id/txtSlotId"
        android:layout_toEndOf="@+id/txtSlotId" />


    <TextView
        android:id="@+id/txtOutputLabel"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/output"
        android:layout_below="@+id/txtSlotId"
        android:layout_toRightOf="@+id/chkBoxCardPowerUp" />

    <TextView
        android:id="@+id/txtCardPowerUpReturnValue"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/returnValue"
        android:layout_below="@+id/txtOutputLabel"
        android:layout_alignLeft="@+id/txtSlotId"
        android:layout_alignStart="@+id/txtSlotId" />

    <TextView
        android:id="@+id/txtCardPowerUpResult"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:layout_below="@+id/txtCardPowerUpReturnValue"
        android:layout_alignLeft="@+id/txtSlotId"
        android:layout_alignStart="@+id/txtSlotId" />

</RelativeLayout>