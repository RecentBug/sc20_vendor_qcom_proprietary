<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/border"
    android:padding="2dp" >

    <View
        android:id="@+id/chkBoxSwitchSlot"
        android:layout_width="8dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtSwitchSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chkBoxSwitchSlot"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/chkBoxSwitchSlot"
        android:background="@color/colorIndigo"
        android:text="@string/switchSlot"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtInput5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkBoxSwitchSlot"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/chkBoxSwitchSlot"
        android:layout_toRightOf="@+id/chkBoxSwitchSlot"
        android:padding="4dp"
        android:text="@string/input"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <ProgressBar
        android:id="@+id/progressBarSwitchSlot"
        style="@android:style/Widget.Holo.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtSlotList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInput5"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput5"
        android:padding="4dp"
        android:text="@string/slotList"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/cardSwitchSlot_slotList"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSlotList"
        android:layout_toEndOf="@+id/txtSlotList"
        android:layout_toRightOf="@+id/txtSlotList"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtOutputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSlotList"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/chkBoxSwitchSlot"
        android:padding="4dp"
        android:text="@string/output"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtSwitchSlotReturnValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSlotList"
        android:layout_alignStart="@+id/txtSlotList"
        android:layout_below="@+id/txtOutputLabel"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/returnValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/txtSwitchSlotResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSlotList"
        android:layout_alignStart="@+id/txtSlotList"
        android:layout_below="@+id/txtSwitchSlotReturnValue"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/result"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

</RelativeLayout>