<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/border"
    android:padding="2dp" >

    <CheckBox
        android:id="@+id/chkBoxRegisterCallBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtRegisterCallBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chkBoxRegisterCallBack"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/chkBoxRegisterCallBack"
        android:text="@string/registerCallBack"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <ProgressBar
        android:id="@+id/progressBarRegisterCallback"
        style="@android:style/Widget.Holo.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtInput1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkBoxRegisterCallBack"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/chkBoxRegisterCallBack"
        android:layout_toRightOf="@+id/chkBoxRegisterCallBack"
        android:padding="4dp"
        android:text="@string/input"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtRegisterCallBackInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInput1"
        android:layout_toEndOf="@+id/txtOutputLabel"
        android:layout_toRightOf="@+id/txtOutputLabel"
        android:padding="4dp"
        android:text="@string/notAvailable"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/txtOutputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRegisterCallBackInput"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/chkBoxRegisterCallBack"
        android:padding="4dp"
        android:text="@string/output"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtOutput3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtRegisterCallBackInput"
        android:layout_alignStart="@+id/txtRegisterCallBackInput"
        android:layout_below="@+id/txtOutputLabel"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/returnValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

</RelativeLayout>