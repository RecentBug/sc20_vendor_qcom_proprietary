<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/border"
    android:padding="2dp" >

    <View
        android:id="@+id/chkBoxStreamApdu"
        android:layout_width="8dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtStreamApdu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chkBoxStreamApdu"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/chkBoxStreamApdu"
        android:background="@color/colorIndigo"
        android:text="@string/streamAPdu"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtInput4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkBoxStreamApdu"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/chkBoxStreamApdu"
        android:layout_toRightOf="@+id/chkBoxStreamApdu"
        android:padding="4dp"
        android:text="@string/input"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <ProgressBar
        android:id="@+id/progressBarStreamApdu"
        style="@android:style/Widget.Holo.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtSlotId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInput4"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput4"
        android:padding="4dp"
        android:text="@string/slotID"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/streamApduSlotId"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSlotId"
        android:layout_toEndOf="@+id/txtSlotId"
        android:layout_toRightOf="@+id/txtSlotId"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtClassType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSlotId"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput4"
        android:padding="4dp"
        android:text="@string/class_type"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/streamApduClassType"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtClassType"
        android:layout_toEndOf="@+id/txtClassType"
        android:layout_toRightOf="@+id/txtClassType"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtClassType"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput4"
        android:padding="4dp"
        android:text="@string/instruction"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/streamApduInstruction"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtInstruction"
        android:layout_toEndOf="@+id/txtInstruction"
        android:layout_toRightOf="@+id/txtInstruction"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtParam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInstruction"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput4"
        android:padding="4dp"
        android:text="@string/param1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/streamApduParam1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtParam1"
        android:layout_toEndOf="@+id/txtParam1"
        android:layout_toRightOf="@+id/txtParam1"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtParam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtParam1"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput4"
        android:padding="4dp"
        android:text="@string/param2"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/streamApduParam2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtParam2"
        android:layout_toEndOf="@+id/txtParam2"
        android:layout_toRightOf="@+id/txtParam2"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtParam3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtParam2"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput4"
        android:padding="4dp"
        android:text="@string/param3"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/streamApduParam3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtParam3"
        android:layout_toEndOf="@+id/txtParam3"
        android:layout_toRightOf="@+id/txtParam3"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtAPDUCmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtParam3"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txtInput4"
        android:padding="4dp"
        android:text="@string/apdu_cmd"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <EditText
        android:id="@+id/streamApduCommand"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAPDUCmd"
        android:layout_toEndOf="@+id/txtAPDUCmd"
        android:layout_toRightOf="@+id/txtAPDUCmd"
        android:padding="4dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtOutputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAPDUCmd"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/chkBoxStreamApdu"
        android:padding="4dp"
        android:text="@string/output"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:id="@+id/txtStreamApduReturnValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSlotId"
        android:layout_alignStart="@+id/txtSlotId"
        android:layout_below="@+id/txtOutputLabel"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/returnValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/txtStreamApduResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSlotId"
        android:layout_alignStart="@+id/txtSlotId"
        android:layout_below="@+id/txtStreamApduReturnValue"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="@string/result"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

</RelativeLayout>