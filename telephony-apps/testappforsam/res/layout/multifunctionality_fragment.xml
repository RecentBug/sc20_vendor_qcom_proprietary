<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <HorizontalScrollView
        android:id="@+id/scrollSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left" >

            <Button
                android:id="@+id/btnSlot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slot1" />

            <Button
                android:id="@+id/btnSlot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slot2" />

            <Button
                android:id="@+id/btnSlot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slot3" />

            <Button
                android:id="@+id/btnSlot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slot4" />
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollSlots" />

</RelativeLayout>